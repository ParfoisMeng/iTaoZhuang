/* pages/tools/tools.wxss */

.tool-list {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
}

.tool-item {
  display: flex;
  align-items: center;
}

.tool-item-img {
  width: 50rpx;
  height: 50rpx;
  margin: 25rpx;
}

.tool-item-text {
  width: 100%;
  font-size: 36rpx;
}

.tool-item-line{
 background: #ddd;
 width: 100%;
 height: 1rpx;
}